<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Goals_Overview"
    android:background="@drawable/goals_overview">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/backToHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/ic_action_home"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:contentDescription="@string/home"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/buttonAlarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/backToHome"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_action_alarm"
        android:contentDescription="@string/home"
        />

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:theme="@style/Theme.SchoolGuider.AppBarOverlay"
        android:backgroundTint="@color/grades">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="?actionBarSize"
            android:padding="@dimen/appbar_padding"
            android:text="@string/app_name"
            android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
            android:textSize="40sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/goalsOverview"
            android:textColor="@color/light_blue_A400"
            android:textSize="30sp" />

    </com.google.android.material.appbar.AppBarLayout>

    <Button
        android:id="@+id/goal1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/green"
        android:layout_below="@id/appBar"
        android:layout_margin="20dp"
        android:text="Goal #1"
        android:textSize="20sp"
        />

    <EditText
        android:id="@+id/edit1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/goal1"
        android:layout_below="@id/appBar"
        android:layout_margin="20dp"
        android:hint="Add Goal"
        android:textColorHint="@color/white"
        android:textSize="20sp"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/goal2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/morningButton"
        android:layout_below="@id/goal1"
        android:layout_margin="20dp"
        android:text="Goal #2"
        android:textSize="20sp"
        />

    <EditText
        android:id="@+id/edit2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/goal2"
        android:layout_below="@id/edit1"
        android:layout_margin="20dp"
        android:hint="Add Goal"
        android:textColorHint="@color/white"
        android:textSize="20sp"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/goal3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/afternoon"
        android:layout_below="@id/goal2"
        android:layout_margin="20dp"
        android:text="Goal #3"
        android:textSize="20sp"
        />

    <EditText
        android:id="@+id/edit3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/goal3"
        android:layout_below="@id/edit2"
        android:layout_margin="20dp"
        android:hint="Add Goal"
        android:textColorHint="@color/white"
        android:textSize="20sp"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/goal4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/grades_intro"
        android:layout_below="@id/goal3"
        android:layout_margin="20dp"
        android:text="Goal #4"
        android:textSize="20sp"
        />

    <EditText
        android:id="@+id/edit4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/goal4"
        android:layout_below="@id/edit3"
        android:layout_margin="20dp"
        android:hint="Add Goal"
        android:textColorHint="@color/white"
        android:textSize="20sp"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/goal5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/reading"
        android:layout_below="@id/goal4"
        android:layout_margin="20dp"
        android:text="Goal #5"
        android:textSize="20sp"
        />

    <EditText
        android:id="@+id/edit5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/goal5"
        android:layout_below="@id/edit4"
        android:layout_margin="20dp"
        android:hint="Add Goal"
        android:textColorHint="@color/white"
        android:textSize="20sp"
        android:textColor="@color/white"/>

</RelativeLayout>