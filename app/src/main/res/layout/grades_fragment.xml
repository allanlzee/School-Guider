<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GradesFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.SchoolGuider.AppBarOverlay"
        android:backgroundTint="@color/grades">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="?actionBarSize"
            android:padding="@dimen/appbar_padding"
            android:text="@string/app_name"
            android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
            android:textSize="40sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/courseGrades"
            android:textColor="@color/light_blue_A400"
            android:textSize="30sp" />
    </com.google.android.material.appbar.AppBarLayout>

    <Button
        android:id="@+id/button_first"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="Curricular Overview"
        android:backgroundTint="@color/grades"/>

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appBar">

        <TextView
            android:id="@+id/course1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="@string/course1"
            android:textSize="24sp"
            android:textStyle="bold|italic"
            app:layout_column="0"
            app:layout_row="0" />

        <TextView
            android:id="@+id/course2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="@string/course2"
            android:textSize="24sp"
            android:textStyle="bold|italic"
            app:layout_column="0"
            app:layout_row="1" />

        <TextView
            android:id="@+id/course3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="@string/course3"
            android:textSize="24sp"
            android:textStyle="bold|italic"
            app:layout_column="0"
            app:layout_row="2" />

        <TextView
            android:id="@+id/course4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="@string/course4"
            android:textSize="24sp"
            android:textStyle="bold|italic"
            app:layout_column="0"
            app:layout_row="3" />

        <TextView
            android:id="@+id/course5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="@string/course5"
            android:textSize="24sp"
            android:textStyle="bold|italic"
            app:layout_column="0"
            app:layout_row="4" />

        <TextView
            android:id="@+id/course6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="@string/course6"
            android:textSize="24sp"
            android:textStyle="bold|italic"
            app:layout_column="0"
            app:layout_row="5" />

        <TextView
            android:id="@+id/course7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="@string/course7"
            android:textSize="24sp"
            android:textStyle="bold|italic"
            app:layout_column="0"
            app:layout_row="6" />

        <TextView
            android:id="@+id/course8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="@string/course8"
            android:textSize="24sp"
            android:textStyle="bold|italic"
            app:layout_column="0"
            app:layout_row="7" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/robotics"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            app:layout_column="1"
            app:layout_row="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/gym"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            app:layout_column="1"
            app:layout_row="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/functions"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            app:layout_column="1"
            app:layout_row="2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/english"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            app:layout_column="1"
            app:layout_row="3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/civics"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            app:layout_column="1"
            app:layout_row="4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/history"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            app:layout_column="1"
            app:layout_row="5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/math"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            app:layout_column="1"
            app:layout_row="6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/science"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            app:layout_column="1"
            app:layout_row="7" />

        <TextView
            android:id="@+id/grade1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:padding="16dp"
            android:text="N/A"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_column="2"
            app:layout_row="0" />

        <TextView
            android:id="@+id/grade2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:padding="16dp"
            android:text="N/A"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_column="2"
            app:layout_row="1" />

        <TextView
            android:id="@+id/grade3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:padding="16dp"
            android:text="98"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_column="2"
            app:layout_row="2" />

        <TextView
            android:id="@+id/grade4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:padding="16dp"
            android:text="96"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_column="2"
            app:layout_row="3" />

        <TextView
            android:id="@+id/grade5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:padding="16dp"
            android:text="100"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_column="2"
            app:layout_row="4" />

        <TextView
            android:id="@+id/grade6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:padding="16dp"
            android:text="97"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_column="2"
            app:layout_row="5" />

        <TextView
            android:id="@+id/grade7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:padding="16dp"
            android:text="90"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_column="2"
            app:layout_row="6" />

        <TextView
            android:id="@+id/grade8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:padding="16dp"
            android:text="96"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_column="2"
            app:layout_row="7" />

    </androidx.gridlayout.widget.GridLayout>

</RelativeLayout>