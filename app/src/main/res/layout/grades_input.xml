<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GradesInput">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.SchoolGuider.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/Theme.SchoolGuider.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.SchoolGuider.AppBarOverlay"
        android:backgroundTint="@color/grades">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="?actionBarSize"
            android:padding="@dimen/appbar_padding"
            android:text="@string/app_name"
            android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
            android:textSize="40sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Course Grades"
            android:textColor="@color/light_blue_A400"
            android:textSize="30sp" />
    </com.google.android.material.appbar.AppBarLayout>

    <Button
        android:id="@+id/button_first"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:text="Curricular Overview"
        android:backgroundTint="@color/grades"/>

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appBar">

        <TextView
            android:id="@+id/course1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="Course 1"
            android:textSize="24sp"
            android:textStyle="bold|italic"
            app:layout_column="0"
            app:layout_row="0" />

        <TextView
            android:id="@+id/course2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="Course 2"
            android:textSize="24sp"
            android:textStyle="bold|italic"
            app:layout_column="0"
            app:layout_row="1" />

        <TextView
            android:id="@+id/course3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="Course 3"
            android:textSize="24sp"
            android:textStyle="bold|italic"
            app:layout_column="0"
            app:layout_row="2" />

        <TextView
            android:id="@+id/course4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="Course 4"
            android:textSize="24sp"
            android:textStyle="bold|italic"
            app:layout_column="0"
            app:layout_row="3" />

        <TextView
            android:id="@+id/course5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="Course 5"
            android:textSize="24sp"
            android:textStyle="bold|italic"
            app:layout_column="0"
            app:layout_row="4" />

        <TextView
            android:id="@+id/course6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="Course 6"
            android:textSize="24sp"
            android:textStyle="bold|italic"
            app:layout_column="0"
            app:layout_row="5" />

        <TextView
            android:id="@+id/course7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="Course 7"
            android:textSize="24sp"
            android:textStyle="bold|italic"
            app:layout_column="0"
            app:layout_row="6" />

        <TextView
            android:id="@+id/course8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="Course 8"
            android:textSize="24sp"
            android:textStyle="bold|italic"
            app:layout_column="0"
            app:layout_row="7" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Robotics"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            app:layout_column="1"
            app:layout_row="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Gym"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            app:layout_column="1"
            app:layout_row="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Functions"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            app:layout_column="1"
            app:layout_row="2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="English"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            app:layout_column="1"
            app:layout_row="3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Civics/Careers"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            app:layout_column="1"
            app:layout_row="4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="History"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            app:layout_column="1"
            app:layout_row="5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Math"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            app:layout_column="1"
            app:layout_row="6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Science"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            app:layout_column="1"
            app:layout_row="7" />

        <Button
            android:id="@+id/grade1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:padding="16dp"
            android:text="Add Mark"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_column="2"
            app:layout_row="0"
            android:backgroundTint="@color/red"
            android:onClick="onAddMarkClick"/>

        <Button
            android:id="@+id/grade2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:padding="16dp"
            android:text="Add Mark"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_column="2"
            app:layout_row="1"
            android:backgroundTint="@color/teal_700"
            android:onClick="onAddMarkClick"/>

        <Button
            android:id="@+id/grade3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:padding="16dp"
            android:text="Add Mark"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_column="2"
            app:layout_row="2"
            android:onClick="onAddMarkClick"/>

        <Button
            android:id="@+id/grade4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:padding="16dp"
            android:text="Add Mark"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_column="2"
            app:layout_row="3"
            android:backgroundTint="@color/light_blue_A400"
            android:onClick="onAddMarkClick"/>

        <Button
            android:id="@+id/grade5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:padding="16dp"
            android:text="Add Mark"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_column="2"
            app:layout_row="4"
            android:backgroundTint="@color/red"
            android:onClick="onAddMarkClick"/>

        <Button
            android:id="@+id/grade6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:padding="16dp"
            android:text="Add Mark"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_column="2"
            app:layout_row="5"
            android:backgroundTint="@color/teal_700"
            android:onClick="onAddMarkClick"/>

        <Button
            android:id="@+id/grade7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:padding="16dp"
            android:text="Add Mark"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_column="2"
            app:layout_row="6"
            android:onClick="onAddMarkClick"/>

        <Button
            android:id="@+id/grade8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:padding="16dp"
            android:text="Add Mark"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_column="2"
            app:layout_row="7"
            android:backgroundTint="@color/light_blue_A400"
            android:onClick="onAddMarkClick" />

    </androidx.gridlayout.widget.GridLayout>

</RelativeLayout>